{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./public/build"
    },
    "include": ["resources/js/**/*", "resources/ts/**/*"],
    "exclude": ["node_modules"]
}
